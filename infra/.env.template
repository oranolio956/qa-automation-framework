# SMS Infrastructure Environment Variables - Template
# Copy this file to .env and replace placeholder values with actual credentials

# =============================================================================
# DEVELOPMENT CONFIGURATION TEMPLATE
# =============================================================================

# Twilio Configuration (Replace with actual credentials)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567
TWILIO_AREA_CODE=555

# AWS SNS Configuration (Optional - for failover)
AWS_SNS_ACCESS_KEY=your_aws_access_key_here
AWS_SNS_SECRET_KEY=your_aws_secret_key_here
AWS_SNS_REGION=us-east-1

# RabbitMQ Configuration
RABBITMQ_USER=your_rabbitmq_user_here
RABBITMQ_PASS=your_rabbitmq_password_here

# SMS Worker Configuration
SMS_WORKER_CONCURRENCY=4
SMS_WORKER_PREFETCH=10

# Development Settings
DEBUG=true
LOG_LEVEL=DEBUG

# Infrastructure Scaling
SMS_WORKER_REPLICAS=2

# Redis Configuration
REDIS_MAX_MEMORY=1gb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# RabbitMQ Configuration  
RABBITMQ_VM_MEMORY_HIGH_WATERMARK=0.8
RABBITMQ_DISK_FREE_LIMIT=2GB
RABBITMQ_MAX_CONNECTIONS=1000

# Circuit Breaker Settings
CIRCUIT_BREAKER_THRESHOLD=10
CIRCUIT_BREAKER_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_PER_PHONE=5
RATE_LIMIT_WINDOW=300

# Queue Settings
MESSAGE_TTL_SECONDS=3600
MAX_RETRIES=3

# Connection Pool Settings
REDIS_MAX_CONNECTIONS=100
RABBITMQ_PREFETCH_COUNT=10

# Security (Replace with actual secure values)
JWT_SECRET=your_jwt_secret_key_here_at_least_32_chars
SMS_SERVICE_API_KEY=your_sms_service_api_key_here

# Monitoring
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here
ALERT_WEBHOOK_URL=http://localhost:3001/webhook