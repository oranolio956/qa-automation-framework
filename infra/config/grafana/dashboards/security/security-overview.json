{
  "dashboard": {
    "id": null,
    "title": "Anti-Bot Security Overview",
    "tags": ["security", "antibot", "monitoring"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Security Events Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(security_events_detected_total) by (threat_level)",
            "legendFormat": "{{threat_level}} threats",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Threat Level Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(security_events_detected_total) by (threat_level)",
            "legendFormat": "{{threat_level}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "donut",
          "tooltip": {"mode": "single"}
        }
      },
      {
        "id": 3,
        "title": "Active Threats by Level",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "security_active_threats",
            "legendFormat": "{{threat_level}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 20}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Real-Time Threat Intelligence Matches",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "rate(threat_intelligence_matches_total[5m])",
            "legendFormat": "{{indicator_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Security Events Timeline",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(security_events_detected_total[5m])",
            "legendFormat": "{{event_type}} - {{threat_level}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 6,
        "title": "Top Source IPs (Last Hour)",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "topk(10, sum by (source_ip) (security_events_detected_total))",
            "legendFormat": "",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "filterable": true,
              "sortBy": [{"desc": true, "displayName": "Value"}]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "source_ip"},
              "properties": [
                {"id": "displayName", "value": "Source IP"},
                {"id": "custom.width", "value": 120}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {"id": "displayName", "value": "Event Count"},
                {"id": "custom.width", "value": 100}
              ]
            }
          ]
        }
      },
      {
        "id": 7,
        "title": "Bot Detection Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(security_events_detected_total{event_type=\"bot_detection\"}[5m]) / rate(security_events_detected_total[5m]) * 100",
            "legendFormat": "Bot Detection %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 20},
                {"color": "red", "value": 50}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "False Positive Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "rate(security_false_positives_total[5m]) / rate(security_events_detected_total[5m]) * 100",
            "legendFormat": "False Positive %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 20,
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Geographic Distribution of Threats",
        "type": "geomap",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum by (country) (security_events_detected_total{threat_level=\"high\"})",
            "legendFormat": "{{country}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {"legend": false, "tooltip": false, "vis": false}
            },
            "mappings": [],
            "color": {"mode": "continuous-GrYlRd"},
            "unit": "short"
          }
        }
      },
      {
        "id": 10,
        "title": "Event Processing Performance",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(security_event_processing_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(security_event_processing_seconds_bucket[5m]))",
            "legendFormat": "50th Percentile",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "time_range",
          "type": "interval",
          "options": [
            {"text": "5m", "value": "5m", "selected": false},
            {"text": "15m", "value": "15m", "selected": true},
            {"text": "1h", "value": "1h", "selected": false},
            {"text": "6h", "value": "6h", "selected": false}
          ]
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Critical Security Events",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(security_events_detected_total{threat_level=\"critical\"}[1m]) > 0",
          "iconColor": "red",
          "titleFormat": "Critical Security Event",
          "textFormat": "{{event_type}} detected from {{source_ip}}"
        }
      ]
    }
  }
}