# Environment Configuration Template for Snapchat Account Creation System
# Copy this file to .env and fill in your actual values

# ========== CRITICAL ENVIRONMENT VARIABLES ==========
# These are REQUIRED for the Snapchat account creation system to work

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tinder_automation

# Twilio SMS Services (REQUIRED for Snapchat verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_AREA_CODE=720

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379

# ========== OPTIONAL CONFIGURATION ==========

# Email Services Configuration
BUSINESS_EMAIL_API_KEY=your_business_email_api_key_here
TEMP_EMAIL_API_KEY=your_temp_email_api_key_here

# Anti-Detection Settings
USER_AGENT_ROTATION=true
PROXY_ROTATION=true
DEVICE_FINGERPRINT_SPOOFING=true

# Android Automation Settings
ANDROID_DEVICE_TIMEOUT=30
UIAutomator_RETRY_COUNT=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/snapchat_automation.log

# ========== PRODUCTION SETTINGS ==========

# Security Configuration
SECRET_KEY=your_secret_key_for_encryption_here
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
MAX_ACCOUNTS_PER_HOUR=5
MAX_ACCOUNTS_PER_DAY=50

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30

# ========== DEVELOPMENT SETTINGS ==========

# Debug Mode (set to false in production)
DEBUG=true
DEVELOPMENT_MODE=true

# Test Configuration
TEST_MODE=false
MOCK_SMS_VERIFICATION=false
MOCK_EMAIL_VERIFICATION=false

# ========== NOTES ==========
# 1. NEVER commit the actual .env file with real credentials to git
# 2. All REQUIRED variables must be set for the system to work
# 3. Optional variables have sensible defaults but can be customized
# 4. In production, use a secure secrets management system instead of .env files
