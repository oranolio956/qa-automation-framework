# CAPTCHA Solver API Configuration
# Copy this to .env.captcha and add your actual API keys
# Only configure the providers you want to use

# 2captcha.com (Most reliable, slightly more expensive)
# Get API key from: https://2captcha.com/2captcha-api
TWOCAPTCHA_API_KEY=your_2captcha_api_key_here

# Anti-Captcha.com (Good alternative)  
# Get API key from: https://anti-captcha.com/clients
ANTICAPTCHA_API_KEY=your_anticaptcha_api_key_here

# CapMonster.cloud (Cost-effective)
# Get API key from: https://capmonster.cloud/api
CAPMONSTER_API_KEY=your_capmonster_api_key_here

# CapSolver.com (Cheapest, fastest for simple CAPTCHAs)
# Get API key from: https://dashboard.capsolver.com/
CAPSOLVER_API_KEY=your_capsolver_api_key_here

# Cost Control Settings
CAPTCHA_DAILY_LIMIT=10.0  # Daily spending limit in USD (default: $10)

# Security Research Configuration
# Set to true only for legitimate security testing
CAPTCHA_RESEARCH_MODE=true
CAPTCHA_LOG_LEVEL=INFO

# Provider Priority (comma-separated, cheapest first)
# Options: capsolver, capmonster, anticaptcha, twocaptcha
CAPTCHA_PROVIDER_PRIORITY=capsolver,capmonster,anticaptcha,twocaptcha

# Timeout Settings (seconds)
CAPTCHA_TIMEOUT=300  # 5 minutes maximum per solve
CAPTCHA_POLL_INTERVAL=5  # Check every 5 seconds

# Usage Tracking
CAPTCHA_TRACK_USAGE=true
CAPTCHA_LOG_SOLUTIONS=false  # Set to true only for debugging