{
  "name": "christmas-light-marketplace",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo for Contractor Registration System (apps, services, packages)",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "build:web": "npm --workspace apps/web run build",
    "start:web": "npm --workspace apps/web run start",
    "dev:contractor": "npm --workspace services/contractor-service run dev",
    "dev:document": "npm --workspace services/document-service run dev"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}

