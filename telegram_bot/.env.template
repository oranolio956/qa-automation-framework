# Telegram Bot Configuration Template
# Copy this file to .env and replace placeholder values with actual credentials

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
BOT_USERNAME=your_bot_username

# Bot Settings
BOT_MODE=polling
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PORT=8080
ADMIN_USER_IDS=

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tinder_bot
REDIS_URL=redis://localhost:6379

# Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYMENT_PROVIDER_TOKEN=your_telegram_payment_provider_token

# Integration Settings
TINDER_AUTOMATION_ENABLED=true
AUTOMATION_API_URL=http://localhost:8000/api/v1

# Security Settings
SECRET_KEY=your_secure_secret_key_at_least_32_chars_long
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Feature Flags
ENABLE_PAYMENTS=true
ENABLE_REFERRALS=true
ENABLE_BULK_DISCOUNTS=true
ENABLE_ADMIN_PANEL=true