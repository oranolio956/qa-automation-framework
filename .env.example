# Tinder Automation System - Environment Configuration
# Copy this to .env and update with your actual values
# DO NOT commit .env file to version control

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment type (development, staging, production, testing)
ENVIRONMENT=development

# Application settings
APP_DEBUG=true
APP_LOG_LEVEL=INFO
APP_TIMEZONE=UTC

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server settings
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
SERVER_WORKERS=4
SERVER_RELOAD=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database URL
DATABASE_URL=postgresql://user:password@localhost:5432/automation_dev

# Database connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection URL
REDIS_URL=redis://localhost:6379

# Optional Redis password
REDIS_PASSWORD=your_redis_password_here

# Redis connection settings
REDIS_DATABASE=0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret key (minimum 64 characters for security)
JWT_SECRET=your_jwt_secret_here_min_64_chars_for_security

# Encryption key for sensitive data (minimum 32 characters)
ENCRYPTION_KEY=your_encryption_key_here_min_32_chars

# Webhook secret for validating incoming webhooks (minimum 32 characters)
WEBHOOK_SECRET=your_webhook_secret_here_min_32_chars

# Session and security settings
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8
REQUIRE_2FA=false

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# TWILIO SMS CONFIGURATION
# =============================================================================

# Twilio credentials (get from https://console.twilio.com)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# SMS settings
TWILIO_AREA_CODE=720
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks/twilio

# SMS rate limiting
SMS_RATE_LIMIT_PER_HOUR=5
SMS_RATE_LIMIT_PER_DAY=20
SMS_DAILY_COST_LIMIT=50.0
SMS_CODE_EXPIRY_MINUTES=10

# =============================================================================
# BRIGHTDATA PROXY CONFIGURATION
# =============================================================================

# BrightData proxy URL (full format with credentials)
BRIGHTDATA_PROXY_URL=http://brd-customer-hl_12345678-zone-datacenter_proxy1:password@brd.superproxy.io:22225

# BrightData credentials (separate format)
BRIGHTDATA_USERNAME=brd-customer-hl_12345678-zone-datacenter_proxy1
BRIGHTDATA_PASSWORD=your_brightdata_password_here

# Proxy settings
PROXY_TIMEOUT=30
PROXY_MAX_SESSIONS=10
PROXY_VERIFICATION_INTERVAL=300

# =============================================================================
# CAPTCHA SOLVING SERVICES
# =============================================================================

# 2captcha.com API key
TWOCAPTCHA_API_KEY=your_2captcha_api_key_here

# anti-captcha.com API key
ANTICAPTCHA_API_KEY=your_anticaptcha_api_key_here

# capmonster.cloud API key
CAPMONSTER_API_KEY=your_capmonster_api_key_here

# CAPTCHA settings
CAPTCHA_TIMEOUT=120
CAPTCHA_MAX_RETRY_ATTEMPTS=3
CAPTCHA_DAILY_BUDGET_LIMIT=50.0

# =============================================================================
# BUSINESS EMAIL SERVICES
# =============================================================================

# RapidAPI key for email lookup services
RAPIDAPI_KEY=your_rapidapi_key_here

# Hunter.io API key for email finding
HUNTER_API_KEY=your_hunter_api_key_here

# Email service settings
EMAIL_TIMEOUT=30
EMAIL_CACHE_TTL_HOURS=24
EMAIL_RATE_LIMIT=100

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Global rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000
RATE_LIMIT_BURST_SIZE=10

# API rate limiting
API_RATE_LIMIT=1000
API_TIMEOUT=30
API_MAX_RETRIES=3

# =============================================================================
# AUTOMATION CONFIGURATION
# =============================================================================

# Automation engine settings
AUTOMATION_MAX_SESSIONS=3
AUTOMATION_SESSION_DURATION_MINUTES=15
AUTOMATION_BREAK_DURATION_MINUTES=60
AUTOMATION_AGGRESSIVENESS=0.3

# Anti-detection settings
ANTI_DETECTION_ENABLED=true
SCREENSHOT_ON_ERROR=true
AUTOMATION_LOG_LEVEL=INFO

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Base webhook URL for external services
WEBHOOK_BASE_URL=https://your-domain.com

# SMS webhook endpoints
SMS_WEBHOOK_BASE_URL=https://your-domain.com/webhooks

# Webhook security
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Monitoring settings
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30
METRICS_RETENTION_HOURS=168

# Alert settings
ALERT_EMAIL=admin@your-domain.com

# External monitoring services
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=false

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================

# Telegram Bot token (get from @BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrSTUvwxYZ

# Payment provider token for Telegram payments
PAYMENT_PROVIDER_TOKEN=your_telegram_payment_provider_token

# Admin user IDs (comma-separated)
ADMIN_USER_IDS=123456789,987654321

# Bot settings
BOT_WEBHOOK_URL=https://your-domain.com/webhooks/telegram
BOT_MAX_ORDERS_PER_USER_PER_DAY=10

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================

# Stripe configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Crypto payment addresses (for manual payments)
BITCOIN_ADDRESS=bc1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh
ETHEREUM_ADDRESS=0x742d35Cc6634C0532925a3b8D238C6f2f8B7a0d7
USDT_TRC20_ADDRESS=TXYZnv3jLGHJ7Km5KpRt8Yq9N3BxCdAeWz

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core features
TELEGRAM_BOT_ENABLED=true
API_ENABLED=true
WEBHOOKS_ENABLED=true
REAL_TIME_UPDATES=true

# Advanced features
BULK_OPERATIONS=true
ADVANCED_AUTOMATION=false
PREMIUM_FEATURES=false

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================

# Test mode settings (only for development/testing)
TEST_MODE=false
SKIP_VERIFICATION=false
MOCK_EXTERNAL_SERVICES=false

# Development URLs
DEV_API_BASE_URL=http://localhost:8000
DEV_FRONTEND_URL=http://localhost:3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file settings
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/automation.log
LOG_FILE_MAX_SIZE_MB=10
LOG_FILE_BACKUP_COUNT=5

# Structured logging
LOG_FORMAT=json
LOG_INCLUDE_TIMESTAMP=true

# =============================================================================
# BACKUP & RECOVERY CONFIGURATION
# =============================================================================

# Database backup settings
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Connection pooling
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=3600

# Caching settings
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE_MB=100

# Request timeout settings
REQUEST_TIMEOUT=30
CONNECTION_TIMEOUT=10

# =============================================================================
# SECURITY HARDENING
# =============================================================================

# Security headers
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true
CSP_ENABLED=true

# Request limits
MAX_REQUEST_SIZE_MB=10
MAX_UPLOAD_SIZE_MB=50

# IP restrictions (comma-separated CIDR blocks)
ALLOWED_IPS=0.0.0.0/0

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Cloud storage (AWS S3 compatible)
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key
S3_BUCKET_NAME=your-storage-bucket
S3_REGION=us-east-1

# Email service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
SMTP_USE_TLS=true

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add any custom environment variables your application needs below:

# Custom API endpoints
CUSTOM_API_ENDPOINT=https://api.custom-service.com

# Custom service credentials
CUSTOM_SERVICE_API_KEY=your_custom_service_api_key

# Custom rate limits
CUSTOM_RATE_LIMIT=1000

# =============================================================================
# NOTES AND REMINDERS
# =============================================================================

